<% include ../partials/header %>
<div class="container">
  <h1 class="text-center display-3 mb-3">Create a New Campground</h1>
  <div class="yelpcamp-form">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="image"
          placeholder="image url"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          name="price"
          placeholder="price"
          min="0.1"
          step="0.1"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="description"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block btn-color">
          Submit!
        </button>
      </div>
    </form>
    <a class="d-block text-center text-dark" href="/campgrounds">Go Back</a>
  </div>
</div>
<% include ../partials/footer %>
