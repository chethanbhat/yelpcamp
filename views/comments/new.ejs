<% include ../partials/header %>
<div class="container">
  <h1 class="text-center display-4">
    Add New Comments to <%= campground.name %>
  </h1>
  <div class="yelpcamp-form my-5">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group mb-2">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          placeholder="Enter your comment..."
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block btn-color">
          Submit!
        </button>
      </div>
    </form>
    <a class="d-block text-center text-dark" href="/campgrounds">Go Back</a>
  </div>
</div>
<% include ../partials/footer %>
